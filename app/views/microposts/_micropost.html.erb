<li id="micropost_<%= micropost.id%>">
  <%= link_to gravatar_for(micropost.user, size: 50), user_profile_url(micropost.user.slug) %>
  <span class="user"><%= link_to micropost.user.name, user_profile_url(micropost.user.slug) %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost_destroy_url(micropost.id), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  <span>
</li>
