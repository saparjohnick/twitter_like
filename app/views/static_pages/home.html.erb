<% provide(:title, "Home") %>

<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form'%>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

<% end %>

<div class="center jumbotron">
  <h1>Twitter like app</h1>
  <p>This is a homepage</p>
  <%= link_to "Sign up now!", sign_up_url, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails-logo.svg", alt: "Rails logo"), root_url %>
